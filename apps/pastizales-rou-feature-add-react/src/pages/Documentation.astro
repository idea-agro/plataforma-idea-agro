---
import Layout from "../layouts/Layout.astro";
import LandingHeader from "../components/Landing/LandingHeader.astro";
import { Separator } from "@/components/ui/separator";
import Documentation from "@/components/Documentation.tsx";
import { Content as PlatformContent } from "@/content/docs/platform.md";
import { Content as ArticlesContent } from "@/content/docs/articles.md";
import { Content as ApiContent } from "@/content/docs/api.md";
import { Content as GEEContent } from "@/content/docs/gee.md";
import { Indicator } from "@radix-ui/react-checkbox";

---

<title>Documentación - Aplicación de Pastizales</title>

<Layout title="Documentation" >
  
  <div id="hidden-header" >
    <LandingHeader />
  </div>
    <h1 class="flex justify-center text-5xl pt-[80px]  text-center text-white">Documentación</h1>
    <img src="/images/faq.jpg" alt="faq" class="w-screen h-[246px] -z-40 absolute top-0 botton-0   inset-0 bg-black opacity-50 object-cover" />
    <div class="flex items-center border text-foreground rounded-2xl shadow-md border-ring mt-[20px] mx-4 sm:mx-8 md:mx-16 lg:mx-[150px] xl:mx-[300px]">

      <input
        type="text"
        id="searchInput"
        placeholder="Buscar..."
        class="bg-blur backdrop-blur-md w-full rounded-l-2xl h-10 px-4"
      />
    
      <button
        id="searchButton"
        class="bg-blur backdrop-blur-md py-2 px-4 rounded-r-2xl cursor-pointer"
      >
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </div>
  </div>
    

<body class="bg-background text-foreground h-screen w-screen">

    <ul class="flex flex-col space-y-2" id="searchResults"></ul>
      <Documentation client:load>
        <PlatformContent id="sectionPlatformContent" class ="searchable" slot="platformContent"/>
        <ArticlesContent id="sectionArticlesContent" class ="searchable" slot="articlesContent"/>
        <ApiContent id="sectionApiContent" class ="searchable" slot="apiContent"/>
        <GEEContent id="sectionGEEContent" class ="searchable" slot="geeContent"/>
      </Documentation>
        <div
            class="flex flex-col pt-[20px] px-[150px] items-center  "
        >


           
            <!-- Script para manejar la interactividad del FAQ -->
            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    // Obtener todas las preguntas del FAQ
                    var faqQuestions =
                        document.querySelectorAll(".faq-question");

                    // Agregar evento clic a cada pregunta para mostrar u ocultar la respuesta
                    faqQuestions.forEach(function (question) {
                        question.addEventListener("click", function () {
                            var answer = this.nextElementSibling;
                            answer.style.display =
                                answer.style.display === "block"
                                    ? "none"
                                    : "block";
                        });
                    });
                });
            </script>

            <script src="search.js"></script>
            <script>
               window.onload = function() {
                const elementoArticle = document.getElementById('sectionPlatformContent');
                if (elementoArticle) {
                  elementoArticle.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
                const elementoSystemUse = document.getElementById('sectionArticlesContent');
                if (elementoSystemUse) {
                  elementoSystemUse.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
                const elementoApi = document.getElementById('sectionApiContent');
                if (elementoApi) {
                  elementoApi.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
                const elementoGeeResources = document.getElementById('sectionGEEContent');
                if (elementoGeeResources) {
                  elementoGeeResources.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
              };
            </script>
            <script>
              const header = document.getElementById('hidden-header');
              let lastScrollTop = 0;

              window.addEventListener('scroll', function() {
                let scrollTop = window.pageYOffset || document.documentElement.scrollTop;

                if (scrollTop > lastScrollTop) {
                 
                  header.classList.add('hide-header');
                } else {
                  
                  header.classList.remove('hide-header');
                }

                lastScrollTop = scrollTop <= 0 ? 0 : scrollTop; 
              });
            </script>

       
</body>
</Layout>
