<script>
	document.addEventListener("DOMContentLoaded", function () {

	  function borderbottom(e) {
		const elementId = e.querySelectorAll(".documentation-option");
		elementId.forEach(function (element) {
		  element.style.borderBottom = "none";
		});

		e.querySelector(".documentation-option").style.borderBottom = "1px solid black";
	  }

	  const linksDocumentation = document.querySelectorAll("a.option");
	  linksDocumentation.forEach(function (link) {
		link.addEventListener("mouseenter", function (event) {
		  borderbottom(event.currentTarget);
		});
		link.addEventListener("mouseleave", function (event) {
		  const element = (event.currentTarget as HTMLElement).querySelector(".documentation-option");
		  if (element) {
				(element as  HTMLElement).style.borderBottom = "none";
		  }
		});
	  });

	});
  </script>
