---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Pastizales ROU">
  <div class="flex flex-col h-screen">
    <header
      class="flex flex-row text-black px-5 py-2 items-center w-full justify-between text-1sm "
    > <a href="http://localhost:4321" >
        <i title="Inicio" class="fa-solid fa-house  rounded-full cursor-pointer transition-transform transform-gpu hover:scale-150"></i>
      </a>
      <slot name="header" />
      <slot name="options" />
    </header>

    <main class="flex flex-row flex-grow">
      <section class="bg-green-500 flex-grow flex flex-col">
        <slot name="map" />
      </section>

      <aside class="right-0 w-60 p-4 bg-white">
        <div class="flex items-center border rounded-2xl shadow-md">
          <input
            type="text"
            placeholder="Buscar..."
            class="w-full py-1 px-2 rounded-l-lg focus:outline-none"
          />
          <button
            class="bg-blur py-2 px-4 rounded-r-lg rounded-full cursor-pointer transition-transform transform-gpu hover:scale-150"
          >
            <!-- Cambia el icono de bÃºsqueda por una lupa -->
            <i class=" fa-solid fa-magnifying-glass"></i>
          </button>
        </div>
        <div class="flex flex-row text-black px-1 py-2 items-center w-full justify-between text-1sm">
          <slot name="list"/>
        </div>

      </aside>
    </main>
  </div>
  
</Layout>

<script src="https://kit.fontawesome.com/87794a60ab.js" crossorigin="anonymous"
></script>
