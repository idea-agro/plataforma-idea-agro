---
import texts from "@/../texts.json";
import { Separator } from "@/components/ui/separator";
---

<div 
  id="indicatorsOptionPanel" 
  data-state="inactive" 
  class="option-panel hidden mt-10 flex flex-col w-full mx-auto px-6 py-4"
>
  <!-- Títulos de secciones -->
  <div class="grid grid-cols-2 mb-4">
    <h2 class="font-bold text-base">Indicadores Ambientales</h2>
    <h2 class="font-bold text-base">Indicadores Productivos</h2>
  </div>

  <!-- Contenedor de indicadores en dos columnas -->
  <div class="grid grid-cols-2 gap-4">
    <!-- Columna de Indicadores Ambientales -->
    <div class="flex flex-col gap-4">
      <!-- Indicador RH -->
      <div 
        id="rh" 
        class="indicator flex p-2 items-center hover:bg-gray-200 cursor-pointer h-[4rem] w-[12rem] rounded-lg border border-black text-black"
      >
        <i class="mr-2">
          <!-- SVG RH: coloca aquí tu SVG completo -->
          <svg width="24" height="24">
            <path fill="currentColor" d="..." />
          </svg>
        </i>
        <a href="/Main?indicator=rh" class="text-sm">
          {texts.landing.header.nav.Indicators.rhIndicator.title}
        </a>
      </div>

      <!-- Indicador ET -->
      <div 
        id="et" 
        class="indicator flex p-2 items-center hover:bg-gray-200 cursor-pointer h-[4rem] w-[12rem] rounded-lg border border-black text-black"
      >
        <i class="mr-2">
          <!-- SVG ET -->
          <svg width="24" height="24">
            <path fill="currentColor" d="..." />
          </svg>
        </i>
        <a href="/Main?indicator=et" class="text-sm">
          {texts.landing.header.nav.Indicators.etIndicator.title}
        </a>
      </div>

      <!-- Indicador IOSE -->
      <div 
        id="iose" 
        class="indicator flex p-2 items-center hover:bg-gray-200 cursor-pointer h-[4rem] w-[12rem] rounded-lg border border-black text-black"
      >
        <i class="mr-2">
          <!-- SVG IOSE -->
          <svg width="24" height="24">
            <path fill="currentColor" d="..." />
          </svg>
        </i>
        <a href="/Main?indicator=iose" class="text-sm">
          {texts.landing.header.nav.Indicators.ioseIndicator.title}
        </a>
      </div>

      <!-- Indicador COVER -->
      <div 
        id="cover" 
        class="indicator flex p-2 items-center hover:bg-gray-200 cursor-pointer h-[4rem] w-[12rem] rounded-lg border border-black text-black"
      >
        <i class="mr-2">
          <!-- SVG COVER -->
          <svg width="24" height="24">
            <path fill="currentColor" d="..." />
          </svg>
        </i>
        <a href="/Main?indicator=cover" class="text-sm">
          {texts.landing.header.nav.Indicators.coverIndicator.title}
        </a>
      </div>
    </div>

    <!-- Columna de Indicadores Productivos -->
    <div class="flex flex-col gap-4">
      <!-- Indicador APAR -->
      <div 
        id="apar" 
        class="indicator flex p-2 items-center hover:bg-gray-200 cursor-pointer h-[4rem] w-[12rem] rounded-lg border border-black text-black"
      >
        <i class="mr-2">
          <!-- SVG APAR -->
          <svg width="24" height="24">
            <path fill="currentColor" d="..." />
          </svg>
        </i>
        <a href="/Main?indicator=apar" class="text-sm">
          {texts.landing.header.nav.Indicators.aparIndicator.title}
        </a>
      </div>

      <!-- Indicador PPNA -->
      <div 
        id="ppna" 
        class="indicator flex p-2 items-center hover:bg-gray-200 cursor-pointer h-[4rem] w-[12rem] rounded-lg border border-black text-black"
      >
        <i class="mr-2">
          <!-- SVG PPNA -->
          <svg width="24" height="24">
            <path fill="currentColor" d="..." />
          </svg>
        </i>
        <a href="/Main?indicator=ppna" class="text-sm">
          {texts.landing.header.nav.Indicators.ppnaIndicator.title}
        </a>
      </div>

      <!-- Indicador CONSERVACIÓN -->
      <div 
        id="conservation" 
        class="indicator flex p-2 items-center hover:bg-gray-200 cursor-pointer h-[4rem] w-[12rem] rounded-lg border border-black text-black"
      >
        <i class="mr-2">
          <!-- SVG Conservación -->
          <svg width="24" height="24">
            <path fill="currentColor" d="..." />
          </svg>
        </i>
        <a href="/Main?indicator=conservation" class="text-sm">
          Conservación
        </a>
      </div>

      <!-- Indicador APROPIACIÓN HUMANA -->
      <div 
        id="humanAppropriation" 
        class="indicator flex p-2 items-center hover:bg-gray-200 cursor-pointer h-[4rem] w-[12rem] rounded-lg border border-black text-black"
      >
        <i class="mr-2">
          <!-- SVG Apropiación Humana -->
          <svg width="24" height="24">
            <path fill="currentColor" d="..." />
          </svg>
        </i>
        <a href="/Main?indicator=humanAppropriation" class="text-sm">
          Apropiación Humana
        </a>
      </div>
    </div>
  </div>

  <!-- Indicador adicional: Comunidades (opcional, fuera de las dos columnas) -->
  <div class="mt-4">
    <a
      href="/Main?zone=COMMUNITIES"
      id="communities"
      class="indicator zone flex p-2 items-center hover:bg-gray-200 cursor-pointer h-[4rem] w-[12rem] rounded-lg border border-black text-black"
    >
      <i class="mr-2">
        <!-- SVG Communities -->
        <svg width="24" height="24">
          <path fill="currentColor" d="..." />
        </svg>
      </i>
      <span class="text-sm">
        {texts.landing.header.nav.Zones.communitiesZones.title}
      </span>
    </a>
  </div>

  <!-- Sección de descripciones (ocupa todo el ancho) -->
  <div class="mt-6 w-full">
    <!-- Descripción general -->
    <div 
      id="indicatorsDescriptions" 
      class="description text-black flex flex-col text-sm whitespace-pre-line pb-4 w-full"
    >
      {texts.landing.header.nav.Indicators.generalDescription}
    </div>
    <!-- Descripción APAR -->
    <div 
      id="aparDescription" 
      class="description text-black hidden flex-col text-sm whitespace-pre-line pb-4 w-full"
    >
      {texts.landing.header.nav.Indicators.aparIndicator.description}
    </div>
    <!-- Descripción PPNA -->
    <div 
      id="ppnaDescription" 
      class="description text-black hidden flex-col text-sm whitespace-pre-line pb-4 w-full"
    >
      {texts.landing.header.nav.Indicators.ppnaIndicator.description}
    </div>
    <!-- Descripción RH -->
    <div 
      id="rhDescription" 
      class="description text-black hidden flex-col text-sm whitespace-pre-line pb-4 w-full"
    >
      {texts.landing.header.nav.Indicators.rhIndicator.description}
    </div>
    <!-- Descripción ET -->
    <div 
      id="etDescription" 
      class="description text-black hidden flex-col text-sm whitespace-pre-line pb-4 w-full"
    >
      {texts.landing.header.nav.Indicators.etIndicator.description}
    </div>
    <!-- Descripción IOSE -->
    <div 
      id="ioseDescription" 
      class="description text-black hidden flex-col text-sm whitespace-pre-line pb-4 w-full"
    >
      {texts.landing.header.nav.Indicators.ioseIndicator.description}
    </div>
    <!-- Descripción COVER -->
    <div 
      id="coverDescription" 
      class="description text-black hidden flex-col text-sm whitespace-pre-line pb-4 w-full"
    >
      {texts.landing.header.nav.Indicators.coverIndicator.description}
    </div>
    <!-- Descripción CONSERVACIÓN -->
    <div 
      id="conservationDescription" 
      class="description text-black hidden flex-col text-sm whitespace-pre-line pb-4 w-full"
    >
      Aquí iría la descripción del indicador de Conservación.
    </div>
    <!-- Descripción APROPIACIÓN HUMANA -->
    <div 
      id="humanAppropriationDescription" 
      class="description text-black hidden flex-col text-sm whitespace-pre-line pb-4 w-full"
    >
      Aquí iría la descripción del indicador de Apropiación Humana.
    </div>
    <!-- Descripción Comunidades -->
    <div 
      id="communitiesDescription" 
      class="description text-black hidden flex-col text-sm whitespace-pre-line pb-4 w-full"
    >
      {texts.landing.header.nav.Indicators.coverIndicator.description}
    </div>
  </div>
</div>

<!-- Script para mostrar/ocultar descripciones -->
<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const indicators = document.querySelectorAll(".indicator");
    indicators.forEach((indicator) => {
      indicator.addEventListener("mouseenter", () => {
        // Ocultar todas las descripciones
        const descriptions = document.querySelectorAll(".description");
        descriptions.forEach((desc) => {
          desc.style.display = "none";
        });
        // Mostrar solo la descripción asociada
        const description = document.getElementById(`${indicator.id}Description`);
        if (description) {
          description.style.display = "flex";
        }
      });
    });
  });
</script>
