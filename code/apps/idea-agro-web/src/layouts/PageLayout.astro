---
import Logo from "@/components/Logo.astro";
import Layout from "@/layouts/Layout.astro";

import { BasinsGradeSelector } from "@/components/BasinsGradeSelector";
---

<Layout title="Idea Agro">
  <div class="flex flex-col h-screen ">
    <header
      class="flex flex-row px-5 py-2 items-center w-full justify-between text-1sm bg-background"
    >
      <a
        href="/"
        class="rounded-full cursor-pointer transition-transform transform-gpu hover:scale-110"
      >
        <Logo />
      </a>

      <slot name="header" />
      <slot name="options" />
    </header>

    <main class="flex flex-row flex-grow border-t-2 p-1 pt-2 gap-2">
      <section
        class="bg-green-500 flex-grow flex flex-col fadeInUp fadeInUpSlow"
      >
        <slot name="map" />
      </section>

      <aside
        class="right-0 w-1/3 p-4 fadeInUp fadeInUpSlower  "
      >
        <slot name="tools" />
        <slot name="list" />
      </aside>
    </main>
  </div>
</Layout>
